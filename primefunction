#include <iostream>
using namespace std;

bool checkprimenum(int n);

int main()
{
    int n,i;
    bool sum=false;
    cout<<"Enter a positive  integer: ";
    cin>>n;

    for(i=2;i<=n/2;++i)
    {
        if (checkprimenum(i))
        {
            if (checkprimenum(n-i))
            {
                cout<<n<<" = "<<i<<" + "<<n-i<<endl;
                sum=true;
            }
        }
    }

    if (!sum)
      cout<<n<<" can't be expressed as sum of two prime numbers";

    return 0;
}

bool checkprimenum(int n)
{
    bool prime=true;
    for(int i=2;i<=n/2;++i)
    {
        if(n%i==0)
        {
            prime=false;
            break;
        }
    }

    return prime;
}
